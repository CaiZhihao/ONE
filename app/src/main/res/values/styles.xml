<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/decoration</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopupWindowAnimationBottom">
        <item name="android:windowEnterAnimation">@anim/pop_enter_b2t</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_t2b</item>
    </style>

    <style name="PopupWindowAnimationRight">
        <item name="android:windowEnterAnimation">@anim/pop_enter_r2l</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_l2r</item>
    </style>
</resources>
